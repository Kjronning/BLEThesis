<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="180dp"
        android:layout_height="227dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:text="X"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/addXButton"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="▲"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/xAxis"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="36sp" />

            <Button
                android:id="@+id/subtractXButton"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:text="▼"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:text="Y"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/addYButton"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="▲"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/yAxis"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="36sp" />

            <Button
                android:id="@+id/subtractYButton"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:text="▼"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/informationTextView"
        android:layout_width="337dp"
        android:layout_height="306dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="64dp"
        android:singleLine="false"
        android:text="No device found yet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discoveryButton" />

    <Button
        android:id="@+id/discoveryButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Get Bluetooth Signals"
        app:layout_constraintBottom_toTopOf="@+id/informationTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</android.support.constraint.ConstraintLayout>